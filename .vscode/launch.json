{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "CMake Debug with Clang and LLDB",
        "type": "cppdbg",
        "request": "launch",
        "program": "${command:cmake.launchTargetPath}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb",
        "miDebuggerPath": "C:\\Program Files\\LLVM\\bin\\lldb.exe",
        "setupCommands": [
          {
            "description": "Set Disassembly Flavor to Intel",
            "text": "settings set target.x86-disassembly-flavor intel",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "CMake: build"
      }
    ],
    "tasks": [
      {
        "label": "CMake: build",
        "type": "shell",
        "command": "cmake --build ${workspaceFolder}/build --config Debug",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ]
      }
    ]
  }
  